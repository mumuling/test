<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/info_title_img"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        tools:src="@drawable/profile_icon_weigui" />

    <TextView
        android:id="@+id/info_title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/info_title_img"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        tools:text="工单台帐" />

    <Button
        android:id="@+id/add_error"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/btn_base_background"
        android:text="+添加违规"
        android:textColor="@color/white"
        android:textSize="12dp" />
</RelativeLayout>