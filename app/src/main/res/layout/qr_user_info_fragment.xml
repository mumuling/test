<?xml version="1.0" encoding="utf-8"?>
<com.zhongtie.work.widget.MultipleStatusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/status_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/qr_item_info_head_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/info_title_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_icon_work" />

                    <TextView
                        android:id="@+id/info_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="-2dp"
                        android:layout_toRightOf="@id/info_title_img"
                        android:text="@string/user_base_info_title"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                </LinearLayout>


                <include layout="@layout/qr_item_base_info_view" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="22dp"
                    android:background="@color/line2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_icon_insurance" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="-2dp"
                        android:layout_toRightOf="@id/info_title_img"
                        android:text="@string/info_insurance_title"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/info_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="@color/text_color2"
                    android:textSize="14dp"
                    tools:text="2017-2-27~2018-2-28\n2017-2-27~2018-2-28" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="22dp"
                    android:background="@color/line2" />

                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/profile_icon_weigui" />

                    <TextView
                        android:id="@+id/info_violate_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@id/img1"
                        android:text="@string/info_violate_title"
                        android:textColor="@color/text_color"
                        android:textSize="16dp" />

                    <Button
                        android:id="@+id/add_violate"
                        android:layout_width="70dp"
                        android:layout_height="34dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/btn_base_background"
                        android:text="@string/add_violate"
                        android:textColor="@color/white"
                        android:textSize="12dp" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/info_error_list"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text_color2"
                    android:textSize="14dp"
                    tools:text="2017-2-27~2018-2-28\n2017-2-27~2018-2-28" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="30dp" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</com.zhongtie.work.widget.MultipleStatusView>