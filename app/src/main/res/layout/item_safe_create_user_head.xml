<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="80dp"
    android:layout_height="wrap_content">

    <com.zhongtie.work.widget.BaseImageView
        android:id="@+id/item_user_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/line2"
        app:roundingBorderWidth="1dp"
        tools:background="@drawable/portrait"/>

    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_user_head"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        tools:text="工单台帐"
        android:textColor="@color/text_color"
        android:textSize="14dp"/>

    <ImageView
        android:id="@+id/item_user_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_user_head"
        android:layout_marginBottom="-18dp"
        android:layout_marginLeft="-18dp"
        android:visibility="gone"
        android:layout_toRightOf="@id/item_user_head"
        android:src="@drawable/ic_close_yellow"/>
</RelativeLayout>