<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="72dp"
    android:layout_height="wrap_content">

    <com.zhongtie.work.widget.BaseImageView
        android:id="@+id/item_user_head"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="6dp"
        app:roundAsCircle="true"
        app:roundingBorderColor="@color/line2"
        app:roundingBorderWidth="1dp"
        app:failureImageScaleType="centerCrop"
        app:failureImage="@drawable/portrait"
        app:placeholderImageScaleType="centerCrop"
        app:placeholderImage="@drawable/portrait"
        android:background="@drawable/portrait"/>

    <TextView
        android:id="@+id/item_user_name"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_user_head"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textSize="14dp"
        tools:text="工单台帐"/>

    <ImageView
        android:id="@+id/item_user_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_user_head"
        android:layout_marginBottom="-23dp"
        android:layout_marginLeft="-18dp"
        android:layout_toRightOf="@id/item_user_head"
        android:src="@drawable/ic_close_yellow"
        android:visibility="gone"/>
</RelativeLayout>